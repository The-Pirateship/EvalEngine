{
  "name": "eval-engine",
  "version": "0.0.1",
  "description": "Unit tests for LLMs",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "eval-engine": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outfile dist/index.js --target node --minify && bun build src/cli/index.ts --outfile dist/cli.js --target node --minify && tsc --emitDeclarationOnly --outDir dist && cp dist/src/index.d.ts dist/index.d.ts && cp dist/src/cli/index.d.ts dist/cli.d.ts",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "dev": "bun src/cli/index.ts"
  },
  "author": "PirateShip Pte. Ltd.",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "glob": "^10.3.10",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.5.2"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  }
}
